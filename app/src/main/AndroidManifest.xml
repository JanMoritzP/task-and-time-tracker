<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission required to read app usage stats / foreground app -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />

    <!-- Permission required on Android 13+ to show notifications (needed for foreground service notification) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground service permissions for continuous app blocking checks (Android 14+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- Query all packages - needed to dynamically add apps to block without reinstalling -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <!-- Permission to show overlay dialogs from the service (TYPE_APPLICATION_OVERLAY) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Query specific packages we need to check/block -->
    <queries>
        <package android:name="com.google.android.youtube" />
        <package android:name="com.netflix.mediaclient" />
        <package android:name="com.amazon.avod.thirdpartyclient" />
        <package android:name="com.disney.disneyplus" />
        <package android:name="com.instagram.android" />
        <package android:name="com.zhiliaoapp.musically" />
        <package android:name="com.twitter.android" />
        <package android:name="tv.twitch.android" />
        <!-- Allow user-added apps via intent -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskAndTimeManager"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TaskAndTimeManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Full-screen blocking overlay when a tracked app runs out of time (manual / in-app testing) -->
        <activity
            android:name=".BlockingActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.TaskAndTimeManager" />

        <!-- Runtime overlay Activity launched by AppBlockerOverlayService on top of other apps -->
        <activity
            android:name=".BlockingOverlayActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.TaskAndTimeManager" />

        <!-- Background service for app blocking -->
        <service
            android:name=".AppBlockerService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Overlay foreground service that shows a full-screen blocking UI on top of other apps.
             Uses the same dataSync foreground type as AppBlockerService to satisfy
             Android 14+ FGS type requirements. -->
        <service
            android:name=".AppBlockerOverlayService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Device admin receiver - handles admin permissions -->
        <receiver
            android:name=".AdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
            </intent-filter>
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
        </receiver>

    </application>

</manifest>